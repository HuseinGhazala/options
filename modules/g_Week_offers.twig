<section class=" offer-deadline" section-id="{{ sectionId }}">

  <!-- Wrapper for all products -->
  <swiper-container pagination="true" pagination-dynamic-bullets="true" class="productgroup">

    {% for product in settings.products.products %}
    
    <!-- Each product slide -->
    <swiper-slide class=" product-end">

      <!-- Product data section (left half) -->
      <div class="productdata">
        <h2>عرض الأسبوع</h2>
        <a class="title" href="/categories/{{ product.categories[0].id }}/{{ product.categories[0].slug }}"></a>       
        <p>{{ product.name }}</p>
        
        
        <!-- Countdown timer section -->
        <div class="counttimer">
          <div class="countDown">
            <ul>
              <li class="countdown__seconds js-seconds" style="color: white;">
                <span style="color: white; font-size: 25px; font-weight: 700"></span>
                {{ locals.sec }}
              </li>
              <li class="countdown__minutes js-minutes" style="color: white;">
                <span style="color: white; font-size: 25px; font-weight: 700"></span>
                {{ locals.min }}
              </li>
              <li class="countdown__hours js-hours" style="color: white;">
                <span style="color: white; font-size: 25px; font-weight: 700"></span>
                {{ locals.hour }}
              </li>
              <li class="countdown__days js-days" style="color: white;">
                <span style="color: white; font-size: 25px; font-weight: 700"></span>
                {{ locals.day }}
              </li>
            </ul>
          </div>
            	<a  href="{{product.all}}">
							<button class = "btn-shopnow">
								{{locals.shop_now}}</button>
						</a>
        </div>
      </div>
     

      <!-- Product image section (right half) -->
      <div class="productimage">
        <img loading="lazy" src="{{ product.images[0]['image']['medium'] }}" alt="{{ product.images.alt_text }}">
      </div>

    </swiper-slide> <!-- End of product slide -->

    {% endfor %}
    
  </swiper-container> <!-- End of swiper-wrapper -->

  <!-- Swiper navigation -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

</section>

