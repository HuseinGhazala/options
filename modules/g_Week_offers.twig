  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
<script>

document.addEventListener('DOMContentLoaded', function() {
  const swiperElement = document.querySelector('swiper-container');
  const shadowRoot = swiperElement.shadowRoot;
  const activeBullet = shadowRoot.querySelector('.swiper-pagination-bullet-active');
  
  if (activeBullet) {
    activeBullet.style.backgroundColor = 'red'; 
  }
});

function convertToDate(textDate) {
 
  if (!textDate || !textDate.trim()) {
    return null; 
  }

  const parts = textDate.split('-');
  if (parts.length !== 3) {
    return null; 
  }

  const year = parseInt(parts[0], 10);
  const month = parseInt(parts[1], 10) - 1; 
  const day = parseInt(parts[2], 10);

  return new Date(year, month, day);
}
let realtime = convertToDate('{{ settings.dateTime_enter }}');
let count = new Date(realtime).getTime();
let total = document.querySelectorAll('.countDown');
total.forEach( (el) =>{
    
    if (el) {
    const dayscount = el.querySelector('.js-days span');
    const hourscount = el.querySelector('.js-hours span');
    const minutescount = el.querySelector('.js-minutes span');
    const secondcount = el.querySelector('.js-seconds span');

    const startCountdown = () => {
    const timer = setInterval(function() {

    let now = new Date().getTime();

    let distance = count - now;
    if (distance < 0) {
        el.remove();
        document.querySelectorAll('.counttimer').forEach(e => {
            e.innerHTML = `
            <h1 class="offer_end">
                انتهي العرض
            </h1>
            `
        })
        clearInterval(timer);
    }

    let days = Math.floor(distance / (1000 * 60 * 60 * 24));
    let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    let seconds = Math.floor((distance % (1000 * 60)) / 1000);


    dayscount.innerHTML = days;
    hourscount.innerHTML = hours;
    minutescount.innerHTML = minutes;
    secondcount.innerHTML = seconds;



    }, 1000);
    }
    startCountdown();
    }
})
</script>

