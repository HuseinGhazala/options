<div section-id="{{ sectionId }}" data-lg-scroll-offset="130" data-md-scroll-offset="130" data-sm-scroll-offset="94" class="home-products-section section-padding-space">
	<div class="container slider-container">
		{% include 'title.twig' with { 'component_title': settings.category.name } %}
		<div class="d-flex flex-column">
			<div class="products-slider-wrapper swiper-container mySwiper" style="position: relative">
				<div class="products-slider s-slider swiper-wrapper">
					{% for product in settings.category.products %}
						<div class="prod-col swiper-slide">
							{% include 'product-card.twig' with {'product' : product, 'index': key} %}
						</div>
					{% endfor %}
				</div>
				{% if settings.display_more %}
					<div class="mt-5 text-center category-products-display-more-section">
						<a href="/categories/{{ settings.category.id }}/{{ settings.category.slug }}" class="more-button btn btn-outline-primary theme-text-primary theme-border-primary">{{ settings.more_text }}</a>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
<script>
	document.addEventListener('DOMContentLoaded', function () {
const swiper = new Swiper('.mySwiper', {
slidesPerView: 4,
spaceBetween: 10,
centeredSlides: true,
loop: true,
pagination: {
el: '.swiper-pagination',
clickable: true
},
navigation: {
nextEl: '.swiper-button-next',
prevEl: '.swiper-button-prev'
}
});
});
</script>

{% schema %}
{
      "name": {
        "ar": "منتجات التصنيف",
        "en": "Category products"
      },
      "icon": "fal fa-box",
      "display": true,
      "settings": {
        "category": {
          "type": "category_products",
          "label": {
            "ar": "اختر منتجات التصنيف",
            "en": "Select category products"
          }
        },
        "display_more": {
          "type": "checkbox",
          "label": {
            "ar": "",
            "en": ""
          },
          "noLabel": true,
          "option": {
            "ar": "عرض زر جميع منتجات التصنيف",
            "en": "Display button more products"
          }
        },
        "more_text": {
          "type": "text",
          "label": {
            "ar": "نص زر جميع منتجات التصنيف",
            "en": "More text"
          }
        }
      }
    }
{% endschema %}
